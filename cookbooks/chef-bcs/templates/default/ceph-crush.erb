# begin crush map
tunable choose_local_tries 0
tunable choose_local_fallback_tries 0
tunable choose_total_tries 100
tunable chooseleaf_descend_once 1
tunable chooseleaf_vary_r 1
tunable straw_calc_version 2

# devices

# types
type 0 osd
type 1 host
type 2 chassis
type 3 rack
type 4 row
type 5 pdu
type 6 pod
type 7 room
type 8 datacenter
type 9 region
type 10 root

root hdd {
    alg straw
    hash 0  # rjenkins1
}

rule hdd_replicated {
    ruleset 0
    type replicated
    min_size 1
    max_size 10
    step set_chooseleaf_tries 20
    step set_choose_tries 120
    step take hdd
    step choose firstn 3 type rack
    step chooseleaf firstn 0 type host
    step emit
}

<% if node['chef-bcs']['ceph']['pools']['radosgw']['settings']['type'] == 'erasure' %>
# hdd is by default erasure coded
rule hdd {
    ruleset 1
    type erasure
    min_size 1
    max_size 15
    step set_chooseleaf_tries 20
    step set_choose_tries 120
    step take hdd
    <% if node['chef-bcs']['ceph']['pools']['radosgw']['settings']['nodes_per_rack'] > 6 %>
    step choose firstn 3 type rack
    step chooseleaf indep -3 type host
    <% else %>
    step chooseleaf indep 0 type host
    <% end %>
    step emit
}
<% end %>
