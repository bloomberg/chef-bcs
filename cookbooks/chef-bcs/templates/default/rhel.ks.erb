#version=RHEL7
# System authorization information
auth --enableshadow --passalgo=sha512 --kickstart
# Install OS instead of upgrade
install
# Reboot after installation
reboot
# Use CDROM installation media
cdrom
# Use text mode install
text
# Firewall configuration
firewall --disabled
firstboot --disable
ignoredisk --only-use=sda
# Keyboard layouts
# old format: keyboard us
# new format:
keyboard --vckeymap=us --xlayouts='us'
# System language
lang en_US.UTF-8

# Network information
network  --bootproto=dhcp
network  --hostname=localhost.localdomain
unsupported_hardware
# Root password
rootpw --plaintext <%= node['chef-bcs']['kickstart']['rootpwd'] %>
# SELinux configuration
selinux --permissive
# Do not configure the X Window System
skipx
# System timezone
timezone UTC --isUtc
<% if node['chef-bcs']['kickstart']['user']['name'] %>
user --name=<%= node['chef-bcs']['kickstart']['user']['name'] %> --password=<%= node['chef-bcs']['kickstart']['user']['passwd'] %>
<% end -%>
# System bootloader configuration
bootloader --append=" crashkernel=auto" --location=mbr --boot-drive=sda
autopart --type=lvm
# Clear the Master Boot Record
zerombr
# Partition clearing information
clearpart --all --initlabel

%post
# sudo
<% if node['chef-bcs']['kickstart']['sudoer'] %>
echo "%<%= node['chef-bcs']['kickstart']['sudoer'] %> ALL=(ALL) NOPASSWD: ALL" >> /etc/sudoers.d/<%= node['chef-bcs']['kickstart']['sudoer'] %>
sed -i "s/^[^#].*requiretty/#Defaults requiretty/" /etc/sudoers
<% end %>
%end

